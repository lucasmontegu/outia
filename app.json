{
  "expo": {
    "scheme": "acme",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "orientation": "default",
    "web": {
      "output": "static"
    },
    "name": "outia",
    "slug": "outia",
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-notifications",
      "expo-asset",
      "expo-web-browser",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFFFFF",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Outia necesita tu ubicación para mostrar clima en tu ruta.",
          "locationAlwaysPermission": "Outia necesita tu ubicación en segundo plano para alertas de clima.",
          "locationWhenInUsePermission": "Outia necesita tu ubicación para mostrar clima en tu ruta."
        }
      ],
      "@react-native-community/datetimepicker"
    ],
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/splash.png",
        "backgroundImage": "./assets/images/splash.png",
        "monochromeImage": "./assets/images/splash.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": true,
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.lmontegu.outia"
    },
    "ios": {
      "bundleIdentifier": "com.lmontegu.outia",
      "supportsTablet": true
    },
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
